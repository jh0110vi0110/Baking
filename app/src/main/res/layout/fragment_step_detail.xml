<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".ui.StepDetailFragment">
<!--
    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/sepv_step_player"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="0dp"
        android:layout_margin="10dp" />
        -->


    <ImageView
        android:id="@+id/iv_step_detail_fragment_thumbnail"
        android:layout_gravity="left"
        android:paddingRight="15dp"
        android:elevation="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_step_detail_fragment_short_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST STEP DETAIL"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="50dp">

        <Button
            android:id="@+id/btn_step_previous"
            android:padding="40dp"
            android:elevation="6dp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTintMode="src_over"
            />

        <Button
            android:id="@+id/btn_step_next"
            android:padding="40dp"
            android:layout_margin="10dp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:backgroundTintMode="src_over"
             />
    </LinearLayout>



</LinearLayout>